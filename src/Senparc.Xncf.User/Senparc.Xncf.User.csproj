<Project Sdk="Microsoft.NET.Sdk.Razor">
	<PropertyGroup>
		<TargetFramework>netcoreapp3.1</TargetFramework>
		<GenerateEmbeddedFilesManifest>true</GenerateEmbeddedFilesManifest>
		<Version>1.0</Version>
		<AssemblyName>Senparc.Xncf.User</AssemblyName>
		<RootNamespace>Senparc.Xncf.User</RootNamespace>
		<GeneratePackageOnBuild Condition=" '$(Configuration)' == 'Release' ">true</GeneratePackageOnBuild>
		<Description>用户管理</Description>
		<Copyright>Senparc</Copyright>
		<PackageTags>Senparc,NeuCharFramework,NCF,Senparc.Xncf.User</PackageTags>
		<Authors>Senparc</Authors>
		<Owners>Senparc</Owners>
		<!-- <PackageLicenseUrl>https://github.com/NeuCharFramework/NcfPackageSources/blob/master/LICENSE</PackageLicenseUrl> -->
		<Title>用户管理</Title>
		<!--<ProjectUrl> https://github.com/NeuCharFramework/NCF</ProjectUrl>
    <PackageProjectUrl>https://github.com/NeuCharFramework/NcfPackageSources</PackageProjectUrl>
    <PackageIconUrl>https://sdk.weixin.senparc.com/Images/logo-square-ncf.jpg</PackageIconUrl>-->
		<PackageReleaseNotes>
			v1.0 创世
		</PackageReleaseNotes>
		<RepositoryUrl> https://github.com/NeuCharFramework/NcfPackageSources</RepositoryUrl>
		<Configurations>Debug;Release;Test</Configurations>
	</PropertyGroup>
	
	<ItemGroup>
		<EmbeddedResource Include="wwwroot\**\*" />
		<PackageReference Include="Microsoft.Extensions.FileProviders.Embedded" Version="3.1.6" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Senparc.Ncf.XncfBase" Version="0.6.127.8-beta1" />
		<PackageReference Include="Senparc.Ncf.AreaBase" Version="0.6.114-beta1" />
		<ProjectReference Include="..\Senparc.Core\Senparc.Core.csproj" />
		<ProjectReference Include="..\Senparc.Service\Senparc.Service.csproj" />
		<None Include="App_Data\SenparcTraceLog\*" />
	</ItemGroup>

	<ItemGroup>
	  <Content Remove="wwwroot\css\Admin\Register\Index.css" />
	  <Content Remove="wwwroot\css\User\Pages\Register\Index.css" />
	  <Content Remove="wwwroot\js\Admin\Pages\Register\Index.js" />
	  <Content Remove="wwwroot\js\User\Pages\Register\Index.js" />
	</ItemGroup>


	<ItemGroup>
		<PackageReference Include="Microsoft.AspNetCore.Mvc" Version="2.2.0" />
		<!-- 为解决 VS 2019 v16.8 的一个bug，需要添加下方引用 -->
		<PackageReference Include="Microsoft.NET.Sdk.Razor" Version="3.1.10" />
	</ItemGroup>
</Project>